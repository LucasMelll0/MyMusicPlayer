<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/purple_50</item>
    </style>
    <style name="DefaultShapeableImageView" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>
    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/purple_900</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>
    <style name="SubTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/purple_900</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="InformationTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_900</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DefaultIconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DefaultSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@null</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="queryHint">@string/common_searchview_query_hint</item>
        <item name="iconifiedByDefault">true</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/musicListFragment">

    <fragment
        android:id="@+id/PlayerFragment"
        android:name="com.example.meplayermusic.ui.player.PlayerFragment"
        android:label="@string/title_player_fragment"
        tools:layout="@layout/fragment_player">
        <action
            android:id="@+id/action_PlayerFragment_to_musicListFragment"
            app:destination="@id/musicListFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/musicListFragment"
        android:name="com.example.meplayermusic.ui.musiclist.MusicListFragment"
        android:label="fragment_music_list"
        tools:layout="@layout/fragment_music_list"
        >
        <action
            android:id="@+id/action_musicListFragment_to_PlayerFragment"
            app:destination="@id/PlayerFragment"
            app:enterAnim="@anim/slide_in_y"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
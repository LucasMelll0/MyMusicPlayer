<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/purple_100"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/_shapeableimageview_empty_favorites_message"
        app:shapeAppearanceOverlay="@style/ShapeableImageView"
        android:layout_width="@dimen/music_image_size_main_player"
        android:layout_height="@dimen/music_image_size_main_player"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/purple_50"
        app:srcCompat="@drawable/ic_fav_checked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        style="@style/SubTitleTextView"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/_shapeableimageview_empty_favorites_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/fragment_favorites_empty_list_message"/>

</androidx.constraintlayout.widget.ConstraintLayout>